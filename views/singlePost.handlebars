
<link rel="stylesheet" href="/public/css/createPost.css">


<div class="container">
  <h3 style="text-align: center;">Title : {{title}}</h3>
  <p>Author : {{author}}</p>
  <p>Content : {{content}}</p>
<div class = c1 >
  {{#if user}}
  <form action="/post/{{id}}/like" method = "POST" class="likeForm"> 
    <div><p>like:{{lengthOfLike}}</p></div> 
    <div><button type="submit" class = "likeBTN">like!</button></div>
  </form>

  <form action="/post/{{id}}/dislike" method = "POST" class = "dislikeForm"> 
    <div><p>dislike:{{lengthOfDislike}}</p></div>
    <div><button type="submit" class = "dislikeBTN">dislike!</button></div>
  </form>
  {{/if}}
</div>

  <h4 style="text-align: center;">Comments</h4>
  {{#if comments}}
  {{#each comments}}
  <p><div class= "commentsDiv">
    <h4>{{this.author}}</h4>
    <p>{{this.content}}</p>
  </div></p>
  {{/each}}
  {{else}}
  <p>There's no comment yet.</p>
  {{/if}}
  {{#if user}}
  <form action="/post/{{id}}" method="POST" id="add-comment">
    <label for="commentID">
        <textarea name="comment" id="commentID" cols="30" rows="10" id="commentID" placeholder="Wanna say anything?"></textarea>
    </label>
    <label for="buttonID">
        <button type="submit" id="buttonID">comment</button>
    </label>
    <div id="error" hidden></div>
  </form>
  {{/if}}
  {{#if isAuthor}}
<div >
  <a href="/update/{{id}}" style=" color: black;font-weight: bold;font-size: 12pt">Edit</a>
</div>
{{/if}}

    <a href="/" style="color: black;font-weight: bold;font-size: 12pt">Back to main page</a>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="../public/js/addComment_validation.js"></script>

